<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="crm_lead_view_form_inherit_education" model="ir.ui.view">
        <field name="name">crm.lead.view.form.inherit.education</field>
        <field name="model">crm.lead</field>
        <field name="inherit_id" ref="crm.crm_lead_view_form"/>
        <field name="arch" type="xml">
            <xpath expr="//header" position="inside">
                <button name="action_create_enrollment" 
                        string="Create Enrollment" 
                        type="object" 
                        class="oe_highlight"
                        invisible="type != 'opportunity' or not partner_id"/>
            </xpath>
        </field>
    </record>
</odoo>
