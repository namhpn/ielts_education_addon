<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_education_class_tree" model="ir.ui.view">
        <field name="name">education.class.list</field>
        <field name="model">education.class</field>
        <field name="arch" type="xml">
            <list string="Classes">
                <field name="name"/>
                <field name="program_type"/>
                <field name="teacher_id"/>
                <field name="start_date"/>
                <field name="end_date"/>
                <field name="target_band"/>
            </list>
        </field>
    </record>

    <record id="view_education_class_form" model="ir.ui.view">
        <field name="name">education.class.form</field>
        <field name="model">education.class</field>
        <field name="arch" type="xml">
            <form string="Class">
                <sheet>
                    <group>
                        <group>
                            <field name="name"/>
                            <field name="program_type"/>
                            <field name="teacher_id"/>
                        </group>
                        <group>
                            <field name="start_date"/>
                            <field name="end_date"/>
                            <field name="target_band"/>
                        </group>
                    </group>
                    <group>
                        <field name="description"/>
                    </group>
                    <notebook>
                        <page string="Enrollments">
                            <field name="enrollment_ids">
                                <list editable="bottom">
                                    <field name="student_id"/>
                                    <field name="status"/>
                                    <field name="attendance_rate"/>
                                    <field name="current_band"/>
                                    <field name="risk_level"/>
                                </list>
                            </field>
                        </page>
                        <page string="Sessions">
                            <field name="session_ids">
                                <list editable="bottom">
                                    <field name="name"/>
                                    <field name="session_date"/>
                                    <field name="start_time" widget="float_time"/>
                                    <field name="end_time" widget="float_time"/>
                                    <field name="session_no"/>
                                </list>
                            </field>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <record id="action_education_class" model="ir.actions.act_window">
        <field name="name">Classes</field>
        <field name="res_model">education.class</field>
        <field name="view_mode">list,form</field>
    </record>
</odoo>
