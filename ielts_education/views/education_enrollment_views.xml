<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_education_enrollment_tree" model="ir.ui.view">
        <field name="name">education.enrollment.list</field>
        <field name="model">education.enrollment</field>
        <field name="arch" type="xml">
            <list string="Students">
                <field name="name"/>
                <field name="student_id"/>
                <field name="class_id"/>
                <field name="status"/>
                <field name="attendance_rate"/>
                <field name="current_band"/>
                <field name="target_band"/>
                <field name="risk_level" widget="badge" decoration-success="risk_level == 'low'" decoration-warning="risk_level == 'medium'" decoration-danger="risk_level == 'high'"/>
            </list>
        </field>
    </record>

    <record id="view_education_enrollment_form" model="ir.ui.view">
        <field name="name">education.enrollment.form</field>
        <field name="model">education.enrollment</field>
        <field name="arch" type="xml">
            <form string="Enrollment">
                <header>
                    <button name="action_send_email" string="Send Email" type="object" class="oe_highlight"/>
                    <field name="status" widget="statusbar" options="{'clickable': '1'}"/>
                </header>
                <sheet>
                    <div class="oe_title">
                        <h1>
                            <field name="name"/>
                        </h1>
                    </div>
                    <group>
                        <group>
                            <field name="student_id"/>
                            <field name="class_id"/>
                            <field name="crm_lead_id"/>
                            <field name="enroll_date"/>
                        </group>
                        <group>
                            <field name="attendance_rate" widget="progressbar"/>
                            <field name="satisfaction_score"/>
                            <field name="current_band"/>
                            <field name="target_band"/>
                            <field name="risk_level" widget="badge" decoration-success="risk_level == 'low'" decoration-warning="risk_level == 'medium'" decoration-danger="risk_level == 'high'"/>
                        </group>
                    </group>
                    <group>
                        <field name="notes"/>
                    </group>
                    <notebook>
                        <page string="Attendances">
                            <field name="attendance_ids">
                                <list editable="bottom">
                                    <field name="session_id"/>
                                    <field name="state"/>
                                    <field name="reason"/>
                                    <field name="comment"/>
                                </list>
                            </field>
                        </page>
                        <page string="Progress">
                            <field name="progress_ids">
                                <list editable="bottom">
                                    <field name="checkpoint_type"/>
                                    <field name="evaluation_date"/>
                                    <field name="overall_band"/>
                                    <field name="teacher_id"/>
                                </list>
                            </field>
                        </page>
                    </notebook>
                </sheet>
                <chatter/>
            </form>
        </field>
    </record>

    <record id="action_education_enrollment" model="ir.actions.act_window">
        <field name="name">Students</field>
        <field name="res_model">education.enrollment</field>
        <field name="view_mode">list,form</field>
    </record>
</odoo>
