<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_education_session_tree" model="ir.ui.view">
        <field name="name">education.session.list</field>
        <field name="model">education.session</field>
        <field name="arch" type="xml">
            <list string="Sessions">
                <field name="name"/>
                <field name="class_id"/>
                <field name="session_date"/>
                <field name="session_no"/>
                <field name="start_time" widget="float_time"/>
                <field name="end_time" widget="float_time"/>
            </list>
        </field>
    </record>

    <record id="view_education_session_form" model="ir.ui.view">
        <field name="name">education.session.form</field>
        <field name="model">education.session</field>
        <field name="arch" type="xml">
            <form string="Session">
                <sheet>
                    <div class="oe_title">
                        <h1>
                            <field name="name"/>
                        </h1>
                    </div>
                    <group>
                        <group>
                            <field name="class_id"/>
                            <field name="session_date"/>
                            <field name="session_no"/>
                        </group>
                        <group>
                            <field name="start_time" widget="float_time"/>
                            <field name="end_time" widget="float_time"/>
                        </group>
                    </group>
                    <group>
                        <field name="notes"/>
                    </group>
                    <notebook>
                        <page string="Attendances">
                            <field name="attendance_ids">
                                <list editable="bottom">
                                    <field name="student_id"/>
                                    <field name="state"/>
                                    <field name="reason"/>
                                    <field name="comment"/>
                                </list>
                            </field>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <record id="action_education_session" model="ir.actions.act_window">
        <field name="name">Sessions</field>
        <field name="res_model">education.session</field>
        <field name="view_mode">list,form</field>
    </record>
</odoo>
